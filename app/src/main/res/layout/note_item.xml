<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/note_title"
        android:fontFamily="@font/euclid_circular_b_medium"
        android:textColor="#0f0f0f"
        android:textSize="20sp"
        android:padding="6dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="meditation course by yale" />

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/grey"
        android:textSize="16sp"
        android:fontFamily="@font/euclid_circular_b_regular"
        android:padding="6dp"
        android:id="@+id/note_text"
        android:ellipsize="end"
        android:maxLines="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/note_title"
        app:layout_constraintTop_toBottomOf="@id/note_title"
        tools:text="The science of Well-Being - LaurieThe science of Well-Being - Laurie The science of Well-Being - Laurie The science of Well-Being - Laurie The science of Well-Being - Laurie" />
</androidx.constraintlayout.widget.ConstraintLayout>